{% extends 'baseAdmin.html.twig' %}

{% block body %}
    <h1>Typeofevents list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Ispublic</th>
                <th>Isfree</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for typeOfEvent in typeOfEvents %}
            <tr>
                <td><a href="{{ path('typeofevent_show', { 'id': typeOfEvent.id }) }}">{{ typeOfEvent.id }}</a></td>
                <td>{% if typeOfEvent.isPublic %}Yes{% else %}No{% endif %}</td>
                <td>{% if typeOfEvent.isFree %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('typeofevent_show', { 'id': typeOfEvent.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('typeofevent_edit', { 'id': typeOfEvent.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('typeofevent_new') }}">Create a new typeOfEvent</a>
        </li>
    </ul>
{% endblock %}
