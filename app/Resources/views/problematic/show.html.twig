{% extends 'base.html.twig' %}

{% block body %}
    <h1>Problematic</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ problematic.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ problematic.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ problematic.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('problematic_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('problematic_edit', { 'id': problematic.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
